// Typography
sans-family = 'IBM Plex Sans', sans-serif
serif-family = 'IBM Plex Serif', serif
mono-family = 'IBM Plex Mono', monospace

// Breakpoints
screen-sm = 576px
screen-md = 768px
screen-lg = 992px
screen-xl = 1200px

// Opacity
high-emphasis = 0.87
medium-emphasis = 0.6
low-emphasis = 0.38
hover-emphasis = 0.05

// Colors
primary-color = #616161
primary-dark-color = #373737
primary-light-color = #8e8e8e
secondary-color = #424242
secondary-dark-color = #1b1b1b
secondary-light-color = #6d6d6d
text-dark-high-emphasis = alpha(black, high-emphasis)
text-dark-medium-emphasis = alpha(black, medium-emphasis)
text-dark-low-emphasis = alpha(black, low-emphasis)
text-light-high-emphasis = alpha(white, high-emphasis)
text-light-medium-emphasis = alpha(white, medium-emphasis)
text-light-low-emphasis = alpha(white, low-emphasis)
backdrop-color = alpha(gainsboro, medium-emphasis)
border-color = gainsboro

foreground-layer-color = white
background-layer-color = #f0f1f1
hover-layer-color = alpha(black, hover-emphasis)

// Z-index
bar-index = 100
fab-index = 100
menu-index = 200
drawer-index-backdrop = 300
drawer-index = 301
modal-index-backdrop = 400
modal-index = 401
long-click-animation = 2000
