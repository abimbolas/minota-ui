@import '~@/assets/styles/variables'
@import url('https://fonts.googleapis.com/icon?family=Material+Icons')

html
body
  font-size 16px
  line-height 1.5
  font-family sans-family
  margin 0
  padding 0
  overflow auto
  min-height 100vh
  scroll-snap-type both proximity

html
  background-color background-main

textarea
  display block
  font-family mono-family
  font-size inherit
  line-height inherit
  outline none
  width 100%
  max-width 45rem
  padding 0.5rem
  border solid gainsboro 1px
  box-sizing border-box
  min-height 300px
input
button
  display block
  font-family mono-family
  font-size inherit
  line-height inherit
  outline none
  box-sizing border-box
  cursor pointer

input
  cursor text

a
a:hover
a:visited
a:active
  color steelblue

// Actions

.minota-actions
  display flex
  width 100%
  padding 1rem
  margin-left auto
  margin-right auto
  box-sizing border-box

// Sections

.minota-sections_note-width
  display flex
  align-items baseline
  width 100%
  max-width note-width
  margin 0 auto
.minota-section-left
  margin-left 0
  margin-right auto
  display flex
  align-items center
.minota-section-right
  margin-right 0
  margin-left auto
  display flex
  align-items center
.minota-section-center
  margin-left auto
  margin-right auto

// Actions

.minota-action
  padding 1rem
  text-decoration none
  display flex
  align-items center
  justify-content center
  color steelblue

  .material-icons + *
    margin-left 0.25rem

  button&
    border none
    background-color transparent
    font-family inherit

  &[disabled]
    pointer-events none
    opacity low-emphasis

  &[danger]
    color brown
