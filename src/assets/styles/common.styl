@import '~@/assets/styles/variables'
@import url('https://fonts.googleapis.com/icon?family=Material+Icons')

html
body
  font-size 16px
  line-height 1.5
  font-family sans-family
  margin 0
  padding 0
  overflow auto
  min-height 100vh
  scroll-snap-type both proximity

html
  background-color background-main

textarea
  display block
  font-family mono-family
  font-size inherit
  line-height inherit
  outline none
  width 100%
  max-width 45rem
  padding 0.5rem
  border solid gainsboro 1px
  box-sizing border-box
  min-height 300px
input
button
  display block
  font-family mono-family
  font-size inherit
  line-height inherit
  outline none
  box-sizing border-box
  cursor pointer

input
  cursor text

a
a:hover
a:visited
a:active
  color steelblue

// Sections

.minota-section-left
  margin-left 0
  margin-right auto
  display flex
  align-items center
.minota-section-right
  margin-right 0
  margin-left auto
  display flex
  align-items center

// Status

.minota-status
  // text-align right
  margin-right 0
  margin-left auto
  font-size smaller
  line-height 1.5rem
  opacity low-emphasis

// Dots

.minota-dots
  display flex
  justify-content center

.minota-dots__dot
  width 0.375rem
  height 0.5rem
  border-radius 25%
  background-color alpha(black, 0.1)
  & + &
    margin-left 0.125rem
  &[active]
    background-color alpha(black, medium-emphasis)
