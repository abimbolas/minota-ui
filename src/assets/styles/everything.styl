@import "variables"
@import "material"
@import "typography"

html
body
  min-width 420px

// App Preloader
#app-preloader
  display block
  .text-subtitle
    letter-spacing 0.25em
    text-transform uppercase
  &.app-loaded
    margin-top -100vh !important
    opacity 0 !important

// Layout
.text-right
  text-align right

// Screen
.minota-screen
  position relative
  min-height 100vh
  display flex
  flex-direction column

.minota-screen__header
  order 10
  align-items center
  justify-content center
  &:not(:empty)
    min-height 56px
    display flex

.minota-screen__footer
  order 30
  display flex
  align-items center
  justify-content center
  &:not(:empty)
    min-height 56px

.minota-screen__main
  order 20
  display flex
  min-height 100vh
  box-sizing border-box
  padding 0.25rem
  .minota-screen__header:not(:empty) ~ &
    min-height calc(100vh - 56px)
  .minota-screen__footer:not(:empty) ~ &
    min-height calc(100vh - 56px)
  .minota-screen__header:not(:empty) ~ .minota-screen__footer:not(:empty) ~ &
    min-height calc(100vh - 112px)

// Media
.media-max-sm
  @media (min-width screen-sm)
    display none !important

a.no-style
  color inherit
  text-decoration none

// Line after
.line-after
  position relative
  &:after
    content '';
    display block;
    height 1px;
    position absolute;
    bottom 0;
    left 0;
    right 0;
    background-color gainsboro;
