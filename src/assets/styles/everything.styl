@import "variables"

/* App Preloader */
#app-preloader
  display block
  .text-subtitle
    letter-spacing 0.25em
    text-transform uppercase
  &.app-loaded
    margin-top -100vh !important
    opacity 0 !important

// Layout
.text-right
  text-align right

// Screen
.minota-screen
  position relative
  min-height 100vh
  .minota-screen-main
    display flex
    min-height calc(100vh - 56px)
    box-sizing border-box
    @media (min-width screen-sm)
      padding 0.125rem 0.5rem 0.5rem 0.5rem
    @media (min-width screen-md)
      padding 0.25rem 1rem 1rem 1rem

// Line after
.line-after
  position relative
  &:after
    content: '';
    display: block;
    height: 1px;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: gainsboro;
