@import '~@/assets/styles/variables'

.minota-grid
  display grid
  height 100%
  width 100%
  grid-template-rows auto 100% auto
  grid-template-columns auto 100% auto
  grid-template-areas 'top-left top top-right' 'left main right' 'bottom-left bottom bottom-right'
  scroll-snap-type both mandatory

  .minota-row
    grid-area main
    scroll-snap-align center
    scroll-snap-stop always

.minota-row
  width 100%
  height 100%
  display flex
  overflow auto
  scroll-snap-type inline mandatory

  .minota-cell
    flex-shrink 0
    flex-basis 100%
    scroll-snap-align center

.minota-cell
  box-sizing border-box
  overflow auto
