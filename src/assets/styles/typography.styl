button
.text-button
  font-size 0.875rem
  text-transform uppercase
  font-weight 400
  // letter-spacing 1.25px

.text-caption
  font-size 0.75rem
  letter-spacing 0.2px
  // font-weight 400

.text-overline
  font-size 0.625rem
