@import url('https://fonts.googleapis.com/css?family=IBM+Plex+Sans:300,300i,400,400i,500,500i,600,600i,700,700i&subset=all&display=swap')
@import url('https://fonts.googleapis.com/css?family=IBM+Plex+Serif:300,300i,400,400i,500,500i,600,600i,700,700i&subset=all&display=swap')
@import url('https://fonts.googleapis.com/css?family=IBM+Plex+Mono:300,300i,400,400i,500,500i,600,600i,700,700i&subset=all&display=swap')

html
body
  font-family 'IBM Plex Serif', sans-serif
  font-size 16px
  line-height 1.5
  font-weight 300

input
textarea
  font-family inherit
  line-height inherit
  text-transform inherit
  font-weight inherit
  letter-spacing inherit
  font-size inherit

body
.text-body
  font-size 1rem
  font-weight 400
  // letter-spacing 0.5px

.text-body-smaller
  font-size 0.875rem
  // letter-spacing 0.25px

button
.text-button
  font-size 0.875rem
  text-transform uppercase
  font-weight 500
  // letter-spacing 1.25px

.text-caption
  font-size 0.75rem
  letter-spacing 0.2px
  font-weight 400

.text-overline
  font-size 0.625rem
  font-weight 400
  text-transform uppercase
  font-family 'IBM Plex Sans'
  letter-spacing 1.5px

.text-subtitle
  font-size 1rem
  font-weight 400

.text-subtitle-smaller
  font-size 0.875rem
  font-weight 400

h1
h2
h3
h4
h5
h6
  margin 0

.text-h6
.text-h5
.text-h4
.text-h3
.text-h2
.text-h1
  font-family 'IBM Plex Sans'


h6
.text-h6
  font-size 1.25rem
  font-weight 500

h5
.text-h5
  font-size 1.5rem
  font-weight 300

h4
.text-h4
  font-size 2.125rem
  font-weight 300

h3
.text-h3
  font-size 3rem
  font-weight 300

h2
.text-h2
  font-size 3.75rem
  font-weight 300

h1
.text-h1
  font-size 6rem
  font-weight 300

strong
  font-weight 600

code
  background-color gainsboro

.high-emphasis
  opacity high-emphasis

.medium-emphasis
  opacity medium-emphasis

.low-emphasis
  opacity low-emphasis

