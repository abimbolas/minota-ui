html
body
  font-family 'Rubik', sans-serif
  font-size 16px
  line-height 1.5
  font-weight 300

input
textarea
  font-family inherit
  line-height inherit

body
.text-body
  font-size 1rem
  // letter-spacing 0.5px

.text-body-smaller
  font-size 0.875rem
