// Typography
@import url('https://fonts.googleapis.com/css?family=IBM+Plex+Sans:300,300i,400,400i,500,500i,600,600i,700,700i&subset=all&display=swap')
@import url('https://fonts.googleapis.com/css?family=IBM+Plex+Serif:300,300i,400,400i,500,500i,600,600i,700,700i&subset=all&display=swap')
@import url('https://fonts.googleapis.com/css?family=IBM+Plex+Mono:300,300i,400,400i,500,500i,600,600i,700,700i&subset=all&display=swap')

sans-family = 'IBM Plex Sans', sans-serif
serif-family = 'IBM Plex Serif', serif
mono-family = 'IBM Plex Mono', monospace

// Breakpoints
screen-sm = 576px
screen-md = 768px
screen-lg = 992px
screen-xl = 1200px

// Opacity
high-emphasis = 0.87
medium-emphasis = 0.6
low-emphasis = 0.38
hover-emphasis = 0.05

// Sizes
app-padding = 0.5rem
fullscreen-content-height = calc(100vh - 1rem)
fullscreen-content-width = calc(100vw - 1rem)
content-height = calc(100vh - 7rem)
content-width = calc(100vw - 7rem)
